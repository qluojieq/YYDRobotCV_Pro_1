<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/big_background"
    tools:context=".BaseInfoShowActivity">

    <TextView

        android:id="@+id/base_info_back"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="@dimen/btn_main_height"
        android:layout_marginTop="@dimen/btn_main_margin_top"
        android:layout_marginLeft="@dimen/btn_main_margin_side"
        android:background="@mipmap/ic_feedback"
        android:onClick="baseinfoBace" />

    <TextView
        android:layout_marginTop="@dimen/btn_main_margin_top"
        android:layout_marginRight="@dimen/btn_main_margin_side"
        android:background="@mipmap/ic_delete"
        android:layout_width="@dimen/btn_info_delete_width"
        android:layout_height="@dimen/btn_info_delete_height"
        android:layout_alignParentEnd="true"
        android:onClick="baseinfoDelete" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/base_show_head_back"
            android:layout_width="175dp"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:id="@+id/base_show_vip_rate"
                android:text="VIP1"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:textColor="@color/colorTextWrite"
                android:layout_width="wrap_content"
                android:layout_height="28dp" />
        <RelativeLayout
            android:background="@mipmap/portrait_vip_no"
                android:layout_below="@id/base_show_vip_rate"
                android:layout_width="175dp"
                android:layout_height="175dp">
        <ImageView
            android:background="@mipmap/portrait_vip_no"
            android:scaleType="centerCrop"
            android:id="@+id/base_show_head_img"
            android:layout_centerInParent="true"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:src="@mipmap/ic_launcher" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="57dp"
            android:layout_toRightOf="@id/base_show_head_back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/base_show_name"
                android:textSize="@dimen/text_size_base_info"
                android:textColor="@color/colorText"
                android:gravity="center_vertical"
                android:layout_height="@dimen/line_size_base_info"
                android:layout_width="wrap_content"
                android:text="姓名 ： Brandon" />

            <TextView
                android:id="@+id/base_show_gender"
                android:textSize="@dimen/text_size_base_info"
                android:textColor="@color/colorText"
                android:gravity="center_vertical"
                android:layout_height="@dimen/line_size_base_info"
                android:layout_width="wrap_content"
                android:text="性别 ： 男" />

            <TextView
                android:id="@+id/base_show_phone"
                android:textSize="@dimen/text_size_base_info"
                android:textColor="@color/colorText"
                android:gravity="center_vertical"
                android:layout_height="@dimen/line_size_base_info"
                android:layout_width="wrap_content"
                android:text="电话 ： 13076990306" />

            <TextView
                android:id="@+id/base_show_birthday"
                android:textSize="@dimen/text_size_base_info"
                android:textColor="@color/colorText"
                android:gravity="center_vertical"
                android:layout_height="@dimen/line_size_base_info"
                android:layout_width="wrap_content"
                android:text="生日 ： 88-12-17" />

            <TextView

                android:textSize="@dimen/text_size_base_info"
                android:textColor="@color/colorText"
                android:gravity="center_vertical"
                android:layout_height="@dimen/line_size_base_info"

                android:id="@+id/base_show_recognizer_count"
                android:layout_width="wrap_content"
                android:text="被访问次数 ： 1000" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>