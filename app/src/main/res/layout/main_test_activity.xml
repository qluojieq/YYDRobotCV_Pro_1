<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:text="开始猜拳游戏"
        android:onClick="startFFGame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_btn_height" />
    <Button
        android:text="开始眉毛游戏"
        android:onClick="startEBGame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_btn_height" />
    <Button
        android:text="注册人脸"
        android:onClick="startPersonRegist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_btn_height" />

    <Button
        android:text="开始人体检测"
        android:onClick="startPersonDetect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_btn_height" />

    <Button
        android:text="关闭人体检测"
        android:onClick="closePersonDetect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_btn_height" />

    <Button
        android:text="启动人脸检测"
        android:onClick="startFaceDetect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_btn_height" />
    <Button
        android:text="关闭人脸检测"
        android:onClick="stopFaceDetect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_btn_height" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_btn_height">
        <Button
        android:onClick="UpMotion"
        android:text="上"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
        <Button
            android:onClick="DownMotion"
            android:text="下"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:onClick="LeftMotion"
            android:text="左"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:onClick="RightMotion"
            android:text="右"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:onClick="LeftMotionFoot"
            android:text="左足"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:onClick="RightMotionFoot"
            android:text="右足"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:onClick="StopMotion"
            android:text="停"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>